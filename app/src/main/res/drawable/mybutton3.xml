<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#f200ff" />
            <gradient android:angle="-90" android:startColor="#f648ff" android:endColor="#a500b1"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff00f2" />
            <solid android:color="#ea00ff"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#5a28fc" />
            <gradient android:angle="-90" android:startColor="#b871ff" android:endColor="#380099" />
        </shape>
    </item>
</selector>
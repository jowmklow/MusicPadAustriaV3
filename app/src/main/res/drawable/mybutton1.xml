<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff0400" />
            <gradient android:angle="-90" android:startColor="#ff5858" android:endColor="#7c0000"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffafac" />
            <solid android:color="#ff453b"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#fff700" />
            <gradient android:angle="-90" android:startColor="#c6c467" android:endColor="#b6a000" />
        </shape>
    </item>
</selector>